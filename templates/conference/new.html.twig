{% extends 'layout.html.twig' %}

{% block title %}Create a new Conference{% endblock %}

{% block links %}
    <style>
        #map {
            height: 400px;
            width: 100%;
        }
    </style>
{% endblock %}

{% block body %}
    <h1>Create new Conference</h1>

    {{ form_start(form) }}
    {{ form_row(form.title) }}
    <div class="form-group">
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.start) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.country) }}
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.latitude) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.longitude) }}
            </div>
        </div>
    </div>
    <div id="map" data-lat="0" data-lng="0"></div>
    <button class="btn btn-primary mt-3" type="submit">Save</button>
    {{ form_end(form) }}

    <script
        src="https://maps.googleapis.com/maps/api/js?key={{ google_maps_api_key }}">
    </script>
    <script type="module">
        import { initializeMap } from "{{ asset('js/interactiveGoogleMap.js') }}";
        initializeMap();
    </script>
{% endblock %}
